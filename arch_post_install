#!/bin/bash
#
# Install software that I use on Arch Linux Hyprland
#
# - usage       : run this script in $HOME directory

set -euo pipefail

configure_pacman() {
  sudo sed -i '/^\[options\]/a\Color' /etc/pacman.conf
  sudo sed -i '/^\[options\]/a\ILoveCandy' /etc/pacman.conf
}

install_paru() {
  sudo pacman -S --needed git base-devel --noconfirm
  git clone https://aur.archlinux.org/paru-bin.git
  cd paru-bin
  makepkg -si --noconfirm
  cd ..
  rm -rf paru-bin
}

install_packages() {
  paru -Syyu --noconfirm
  paru -S --needed --noconfirm \
    `# --- base packages` \
    stow \
    greetd \
    hyprland \
    hyprpaper \
    hyprpicker \
    grimblast-git \
    pacman-contrib \
    tlp \
    qt5-wayland \
    qt6-wayland \
    polkit-gnome \
    xdg-desktop-portal-hyprland \
    inter-font \
    ttf-jetbrains-mono-nerd \
    adobe-source-serif-fonts \
    noto-fonts \
    noto-fonts-cjk \
    noto-fonts-emoji \
    noto-fonts-extra \
    dunst \
    waybar \
    wofi \
    pavucontrol \
    bluetui \
    foot \
    foot-terminfo \
    zsh \
    zsh-autosuggestions \
    zsh-syntax-highlighting \
    `# --- tui packages` \
    tmux \
    fastfetch \
    unzip \
    ripgrep \
    eza \
    bat \
    fd \
    hyperfine \
    dust \
    tokei \
    oxipng \
    imagemagick \
    btop \
    tree-sitter-cli \
    neovim \
    lazygit \
    `# --- gui packages` \
    adw-gtk-theme \
    papirus-icon-theme \
    qt6ct \
    qt5ct \
    kvantum \
    kvantum-qt5 \
    nautilus \
    mpv \
    shotwell \
    zen-browser-bin \
    libreoffice-still \
    gnome-boxes
}

configure_boot() {
  local loader_conf="/boot/loader/loader.conf"

  sudo sed -i '/^timeout/s/^/#/' "$loader_conf"
}

configure_greeter() {
  local greetd_conf="/etc/greetd/config.toml"

  sudo tee -a "$greetd_conf" <<EOF

[initial_session]
command = "Hyprland"
user = "$(whoami)"
EOF
}

configure_systemctl() {
  sudo systemctl enable greetd.service
  sudo systemctl enable systemd-resolved.service
  sudo systemctl enable bluetooth.service
  sudo systemctl enable tlp.service
  sudo systemctl enable paccache.timer
}

configure_dotfiles() {
  git clone https://github.com/moktavizen/dotfiles
  cd dotfiles

  stow --no-folding --adopt \
    hypr \
    fontconfig \
    wallpapers \
    waybar \
    wofi \
    dunst \
    kdeglobals \
    easyeffects \
    foot \
    zsh \
    fastfetch \
    tmux \
    bin \
    nvim \
    mpv

  git restore .
}

configure_home() {
  mkdir -p "$HOME/Desktop/"
  mkdir -p "$HOME/Documents/"
  mkdir -p "$HOME/Downloads/"
  mkdir -p "$HOME/Downloads/"
  sudo mkdir -p "/media/Books/"
  sudo mkdir -p "/media/Music/"
  sudo mkdir -p "/media/Pictures/"
  sudo mkdir -p "/media/Videos/"

  ln -s /media/Books/ "$HOME/Books"
  ln -s /media/Music "$HOME/Music"
  ln -s /media/Pictures "$HOME/Pictures"
  ln -s /media/Videos/ "$HOME/Videos"
}

configure_extras() {
  git clone https://github.com/tmux-plugins/tpm ~/.config/tmux/plugins/tpm

  chsh -s "$(which zsh)"

  sudo mkdir -p "/etc/systemd/resolved.conf.d/"
  sudo ln -sf "$HOME/dotfiles/_root/systemd-resolved/cloudflare-tls.conf" \
    "/etc/systemd/resolved.conf.d/"

  sudo mkdir -p "/etc/pacman.d/"
  sudo ln -sf "$HOME/dotfiles/_root/pacman/mirror-global" \
    "/etc/pacman.d/mirrorlist"

  sudo mkdir -p "/etc/"
  sudo ln -sf "$HOME/dotfiles/_root/zcfan/zcfan.conf" \
    "/etc/zcfan.conf"
}

main() {
  configure_pacman
  install_paru
  install_packages
  configure_boot
  configure_greeter
  configure_systemctl
  configure_dotfiles
  configure_home
  configure_extras

  echo "Post Installation process complete!"
}

main "$@"
