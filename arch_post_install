#!/bin/bash
#
# Install software that I use on Arch Linux Hyprland
#
# - usage       : just execute without any args, like an alias

set -euo pipefail

configure_pacman() {
  sed -i '/^\[options\]/a\Color' /etc/pacman.conf
  sed -i '/^\[options\]/a\ILoveCandy' /etc/pacman.conf
}

install_paru() {
  pacman -S --needed git base-devel
  sudo -u $SUDO_USER git clone https://aur.archlinux.org/paru-bin.git
  sudo -u $SUDO_USER cd paru-bin
  sudo -u $SUDO_USER makepkg -si --noconfirm
  sudo -u $SUDO_USER cd ..
  sudo -u $SUDO_USER rm -rf paru-bin
}

install_packages() {
  sudo -u $SUDO_USER paru -S --needed \
    stow \
    greetd \
    hyprland \
    hyprpaper \
    hyprpicker \
    qt5-wayland \
    qt6-wayland \
    polkit-gnome \
    xdg-desktop-portal-hyprland \
    inter-font \
    ttf-jetbrains-mono-nerd \
    adobe-source-serif-fonts \
    noto-fonts \
    noto-fonts-cjk \
    noto-fonts-emoji \
    noto-fonts-extra \
    dunst \
    waybar \
    wofi \
    pavucontrol \
    bluetui \
    grimblast \
    foot \
    foot-terminfo \
    zsh \
    zsh-autosuggestions \
    zsh-syntax-highlighting \
    fastfetch \
    tmux \
    neovim \
    tree-sitter-cli \
    ripgrep \
    eza \
    bat \
    fd \
    dust \
    btop \
    nautilus \
    mpv \
    shotwell \
    zen-browser-bin \
    gnome-boxes
}

configure_greeter() {
  sed -i '/^\[initial_session\]/a\user = "$SUDO_USER"' /etc/greetd/config.toml
  sed -i '/^\[initial_session\]/a\command = "Hyprland"' /etc/greetd/config.toml
}

configure_dotfiles() {
  sudo -u $SUDO_USER stow \
    hypr \
    fontconfig \
    wallpapers \
    waybar \
    wofi \
    dunst \
    easyeffects \
    foot \
    zsh \
    fastfetch \
    tmux \
    bin \
    nvim \
    mpv
}

main() {
  if [ -z "${SUDO_USER:-}" ]; then
    echo "Error: Run this script with sudo."
    exit 1
  fi

  configure_pacman
  install_paru
  install_packages
  configure_greeter
  configure_dotfiles

  sudo -u $SUDO_USER echo "Post Installation process complete!"
}

main "$@"
